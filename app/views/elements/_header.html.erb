<div class="header">
    <% if is_login? %>
        現在ログインしているのは <%= current_user.name %> さんです
        <%= form_tag(logout_path, method: :delete) do %>
            <input type="submit" value="ログアウト">
        <% end %>
    <% else %>
        <%= link_to "Login", get_login_path %>/<%= link_to "SignUp", signup_path %>
    <% end %>
</div>